#!/usr/bin/env bash
# a simple Bash script to reload Gunicorn in a graceful way.

# Path to the Gunicorn PID file
GUNICORN_PID="/path/to/gunicorn.pid"

# Check if the PID file exists
if [ -f "$GUNICORN_PID" ]; then
    # Read the PID from the file
    PID=$(cat "$GUNICORN_PID")

    # Send the SIGHUP signal to the Gunicorn master process
    kill -HUP "$PID"

    echo "Gunicorn gracefully reloaded."
else
    echo "Gunicorn PID file not found."
fi
